---
export interface Props {
	title: string
	href: string
	hrefText: string
}

const { href, hrefText, title } = Astro.props
---

<div>
	<h3 class="uppercase font-semibold text-xl">{title}</h3>
	<slot />
	<a
		class="text-footer-link hover:text-footer-link-hover font-semibold"
		href={href}>{hrefText}</a
	>
</div>
