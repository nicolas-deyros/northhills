---
import FooterItem from './FooterItem.astro'
import FooterBtn from './FooterBtn.astro'
import Container from '../Container.astro'
import { Icon } from 'astro-icon'

const today = new Date()
---

<footer
	class="px-0 lg:px-10 flex flex-col justify-center items-center pt-8 bg-north-blue text-white">
	<Container>
		<div class="w-full text-center">
			<address class="my-3 p-0">
				Ruta Panamericana Ramal Pilar, Km 46 – Bajada Los Lagartos C. C. –
				Vivaldi s/nº esquina Caamaño, Pilar (1629), Buenos Aires, Argentina
			</address>
		</div>
		<hr class="md:hidden border border-footer-link my-3" />
		<div
			class="w-full grid grid-cols-1 md:grid-cols-3 grid-rows-1 gap-5 md:gap-28">
			<div class="flex flex-col gap-3 md:gap-8">
				<FooterItem
					href="tel:+54 230 46660082304666008"
					hrefText="+54 230 4666008"
					title="teléfono"
				/>
				<FooterItem
					href="mailto:recepcion@colegionorthhills.com.ar"
					hrefText="recepcion@colegionorthhills.com.ar"
					href2="mailto:admision@colegionorthhills.com.ar"
					hrefText2="admision@colegionorthhills.com.ar"
					title="email">
					<p>Florencia Zoia <br /> Secretaria General y de Admisiones</p>
				</FooterItem>
			</div>
			<hr class="md:hidden border border-footer-link" />
			<div class="flex flex-col gap-3 md:gap-8">
				<FooterItem title="horario de atención"
					><p>Lunes a Viernes <br /> 8:00 – 12:00 <br /> 14:00 – 16:00</p>
				</FooterItem>
				<FooterItem title="redes sociales">
					<ul class="flex gap-1">
						<li>
							<a
								href="https://www.instagram.com/colegionorthhills/"
								target="_blank"
								rel="noopener noreferrer">
								<div
									class="w-10 h-10 flex justify-center items-center rounded-md bg-footer-link text-north-blue">
									<Icon name="jam:instagram" class="h-5" title="instagram" />
								</div>
							</a>
						</li>
						<li>
							<a
								href="https://www.facebook.com/ColegioNorthHills"
								target="_blank"
								rel="noopener noreferrer">
								<div
									class="w-10 h-10 flex justify-center items-center rounded-md bg-footer-link text-north-blue">
									<Icon name="jam:facebook" class="h-5" title="facebook" />
								</div>
							</a>
						</li>
						<li>
							<a
								href="https://www.linkedin.com/company/colegionorthhills"
								target="_blank"
								rel="noopener noreferrer">
								<div
									class="w-10 h-10 flex justify-center items-center rounded-md bg-footer-link text-north-blue">
									<Icon name="jam:linkedin" class="h-5" title="linkedin" />
								</div>
							</a>
						</li>
					</ul>
				</FooterItem>
			</div>
			<hr class="md:hidden border border-footer-link" />
			<div class="flex flex-col w-full items-center gap-3">
				<FooterBtn href="/descargas" hrefText="descargas" />
				<FooterBtn
					href="https://schoolnet.colegium.com/webapp/"
					hrefText="schoolnet"
				/>
				<FooterBtn
					href="http://200.85.120.107:8083/stwa/login.shtml"
					hrefText="schooltrack"
				/>
				<FooterBtn href="/download/marzo-2022" hrefText="menú comedor" />
			</div>
		</div>
		<hr class="md:hidden border border-footer-link" />
		<div class="w-full text-center my-8">
			<p>&copy; {today.getFullYear()} All rights reserved.</p>
		</div>
	</Container>
</footer>
